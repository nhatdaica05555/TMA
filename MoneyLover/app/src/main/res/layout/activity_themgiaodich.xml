<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8sp"
    tools:context="$(relativePackage).$(activityClass)">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hihi"
        android:gravity="center"
        android:padding="7dp"
        android:textColor="#FF9933"
        android:text="THÊM GIAO DỊCH"/>
    <ScrollView
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/bo_listview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:paddingTop="5sp"
                    android:src="@drawable/taikhoan1"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextView04"
                    android:layout_margin="10dp"
                    android:paddingLeft="5dp"
                    android:text="Tài khoản"
                    android:textColor="#CC0000"
                    android:textSize="19sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <Spinner
                android:id="@+id/spintk"
                android:layout_marginLeft="45sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/loaigd1"
                    android:paddingTop="5sp"
                    android:layout_width="40sp"
                    android:layout_height="40sp" />
                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:paddingLeft="5dp"
                    android:text="Loại giao dịch"
                    android:textColor="#CC0000"
                    android:textSize="19sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/spinloaigd"
                android:layout_marginLeft="45sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:paddingTop="5sp"
                        android:src="@drawable/sotien1"/>
                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingLeft="5dp"
                        android:text="Số tiền"
                        android:textColor="#CC0000"
                        android:textSize="19sp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <EditText
                    android:inputType="number"
                    android:hint="Nhập số tiền"
                    android:ems="10"
                    android:background="@drawable/lichsu"
                    android:id="@+id/edsotien"
                    android:layout_marginLeft="45sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <requestFocus/>

                </EditText>


                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:paddingTop="5sp"
                        android:src="@drawable/lydogd2"/>
                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingLeft="5dp"
                        android:text="Lý do"
                        android:textColor="#CC0000"
                        android:textStyle="bold"
                        android:textSize="19sp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edlydo"
                    android:layout_marginLeft="45sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lichsu"
                    android:ems="10"
                    android:hint="Nhập lý do giao dịch"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:paddingTop="5sp"
                        android:src="@drawable/phannhom1"/>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="10dp"
                        android:paddingLeft="5dp"
                        android:text="Phân nhóm"
                        android:textColor="#CC0000"
                        android:textSize="19sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <Spinner
                    android:layout_marginLeft="45sp"
                    android:id="@+id/spinphannhom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:paddingTop="5sp"
                        android:src="@drawable/trangthai"/>
                    <TextView
                        android:id="@+id/trangthaigd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="10dp"
                        android:paddingLeft="5dp"
                        android:text="Trạng thái giao dịch"
                        android:textColor="#CC0000"
                        android:textSize="19sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <Spinner
                    android:id="@+id/spintrangthai"
                    android:layout_marginLeft="45sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:paddingTop="5sp"
                        android:src="@drawable/thoigiangd1"/>
                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingLeft="5dp"
                        android:text="Ngày giao dịch"
                        android:textColor="#CC0000"
                        android:textSize="19sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edngaygiaodich"
                        android:layout_marginLeft="45sp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:ems="10"
                        android:hint="Ngày giao dịch"
                        android:inputType="date"
                        android:textColor="#003399">
                    </EditText>
                    <Button
                        android:id="@+id/daypickerthemgd"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/edngaygiaodich"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/sinh"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/savegd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:background="@drawable/nhap"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:text="Lưu"
                        android:textColor="#FFFFFF"/>
                    <Button
                        android:id="@+id/saveclosegd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:background="@drawable/nhap"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:text="Lưu và Đóng"
                        android:textColor="#FFFFFF"/>

                </TableRow>

        </LinearLayout>

    </ScrollView>

</LinearLayout>