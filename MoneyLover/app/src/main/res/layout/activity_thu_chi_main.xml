<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8sp">
    <RelativeLayout
        android:background="@drawable/bo_listview_xanh"
        android:layout_width="match_parent"
        android:layout_height="200sp">
        <TableLayout
            android:id="@+id/tb1"
            android:padding="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:background="@drawable/bo_listview"
                android:layout_marginBottom="3sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_weight="0"
                    android:background="@drawable/vip"
                    android:gravity="center"/>
                <TextView
                    android:textColor="#CC0000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền mặt"
                    android:gravity="left"
                    android:paddingTop="13sp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="0.2"/>
                <TextView
                    android:textColor="#CC0000"
                    android:id="@+id/TvTienMat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="7.000000"
                    android:gravity="right"/>
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#BBBBBB" />
            <TableRow
                android:layout_marginTop="3sp"
                android:layout_marginBottom="3sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_listview">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_weight="0"
                    android:background="@drawable/vip"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền Tiết Kiệm"
                    android:gravity="left"
                    android:layout_marginLeft="20sp"
                    android:textColor="#CC0000"
                    android:paddingTop="13sp"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/TvTietKiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="8.000000"
                    android:textColor="#CC0000"
                    android:gravity="right"/>
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#BBBBBB"/>
            <TableRow
                android:layout_marginTop="3sp"
                android:layout_marginBottom="3sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_listview">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_weight="0"
                    android:background="@drawable/vip"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thẻ tín dụng"
                    android:gravity="left"
                    android:textColor="#CC0000"
                    android:layout_marginLeft="20sp"
                    android:paddingTop="13sp"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/TvTinDung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="0"
                    android:textColor="#CC0000"
                    android:gravity="right"/>

            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#BBBBBB"
                />
            <TableRow
                android:layout_marginTop="3sp"
                android:layout_marginBottom="3sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_listview">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_weight="0"
                    android:background="@drawable/tiendu"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số dư"
                    android:textColor="#CC0000"
                    android:gravity="left"
                    android:layout_marginLeft="20sp"
                    android:paddingTop="13sp"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/tvSoDu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="0"
                    android:textColor="#222222"
                    android:background="@drawable/table_row"
                    android:gravity="right"/>

            </TableRow>

        </TableLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bo_listview"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="4sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/imgadd"
                    android:layout_weight="2"
                    android:padding="6sp"
                    android:textColor="#222222"
                    android:background="@drawable/sau2"
                    android:text="Thêm Giao Dịch"
                    android:layout_width="match_parent"
                    android:layout_height="80sp" />
                <Button
                    android:id="@+id/imgtoday"
                    android:layout_weight="2"
                    android:padding="6sp"
                    android:background="@drawable/sau2"
                    android:text="Hôm nay"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:padding="4sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/imgmonth"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_weight="2"
                    android:padding="6sp"
                    android:background="@drawable/sau2"
                    android:text="Tháng Này"/>
                <Button
                    android:id="@+id/imgyear"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_weight="2"
                    android:padding="6sp"
                    android:background="@drawable/sau2"
                    android:text="Năm Này"/>


            </LinearLayout>

            <LinearLayout
                android:padding="4sp"
                android:orientation="horizontal"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/imgweek"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_weight="2"
                    android:padding="6sp"
                    android:background="@drawable/sau2"
                    android:text="Lịch Sừ"/>
                <Button
                    android:id="@+id/gioithieu"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_weight="2"
                    android:padding="6sp"
                    android:background="@drawable/sau2"
                    android:text="Giới Thiệu"/>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>